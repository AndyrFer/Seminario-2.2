class Nodo:
    def __init__(self, dato):
        self.dato = dato
        self.siguiente = None

class ListaCircular:
    def __init__(self):
        self.primero = None

##Buscar un elemento especifico en la lista.
def buscar_elemento(self, elemento):
        actual = self.primero
        while actual:
            if actual.dato == elemento:
                return True
            actual = actual.siguiente
            if actual == self.primero:
                break
        return False
